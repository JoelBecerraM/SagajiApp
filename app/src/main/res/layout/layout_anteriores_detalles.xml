<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <TextView android:id="@+id/folio"
            android:layout_width="@dimen/cantidad_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"/>
        <TextView android:id="@+id/fecha"
            android:layout_width="@dimen/fecha_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"/>
        <TextView android:id="@+id/status"
            android:layout_width="@dimen/cantidad_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"/>
        <TextView android:id="@+id/tipo"
            android:layout_width="@dimen/cantidad_width"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"/>
        <TextView android:id="@+id/cliente"
            android:layout_width="@dimen/codigo_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"/>
        <TextView android:id="@+id/nombre"
            android:layout_width="@dimen/descripcion_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"/>
        <TextView android:id="@+id/lineas"
            android:layout_width="@dimen/cantidad_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:gravity="right"/>
        <TextView android:id="@+id/piezas"
            android:layout_width="@dimen/cantidad_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:gravity="right"/>
        <TextView android:id="@+id/total"
            android:layout_width="@dimen/precio_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:gravity="right"/>
    </LinearLayout>
</LinearLayout>
