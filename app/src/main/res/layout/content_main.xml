<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:text="Fecha de Sincronización:"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txtFechaSincronizacion"
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <TextView
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:text="Artículos en el Catálogo:"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txtArticulos"
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:text="Con Existencia:"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txtArticulosExistencia"
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <TextView
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:text="Filial:"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txtFilial"
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:text="Intermediario:"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txtIntermediario"
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <TextView
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:text="Versión:"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/version_number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:text="Fecha de Liberación:"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    style="@style/DatoCategoria"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/version_date" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
