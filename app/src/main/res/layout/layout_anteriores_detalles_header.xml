<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/cantidad_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="Folio"
            android:background="@android:drawable/button_onoff_indicator_off"/>
        <TextView
            android:layout_width="@dimen/fecha_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="Fecha"
            android:background="@android:drawable/button_onoff_indicator_off"/>
        <TextView
            android:layout_width="@dimen/cantidad_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="Status"
            android:background="@android:drawable/button_onoff_indicator_off"/>
        <TextView
            android:layout_width="@dimen/cantidad_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="Tipo"
            android:background="@android:drawable/button_onoff_indicator_off"/>
        <TextView
            android:layout_width="@dimen/codigo_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="Cliente"
            android:background="@android:drawable/button_onoff_indicator_off"/>
        <TextView
            android:layout_width="@dimen/descripcion_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="Nombre"
            android:background="@android:drawable/button_onoff_indicator_off"/>
        <TextView
            android:layout_width="@dimen/cantidad_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="Lineas"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:gravity="right"/>
        <TextView
            android:layout_width="@dimen/cantidad_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="Piezas"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:gravity="right"/>
        <TextView
            android:layout_width="@dimen/precio_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="Total"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:gravity="right"/>
    </LinearLayout>
</LinearLayout>
